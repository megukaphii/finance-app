<MudDrawer @bind-Open="_open" Elevation="1" Variant="@DrawerVariant.Mini" Style="z-index: calc(var(--mud-zindex-appbar) + 2);">
    <MudNavMenu>
        <MudNavLink Icon="@Icons.Material.Filled.Menu" OnClick="@ToggleDrawer"></MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Add" Href="quick-add">Quick Add</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CalendarToday" Href="calendar">Calendar</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.List" Href="list">List</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    private bool _open = true;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}
