<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:model="clr-namespace:FinanceApp.Data.Models;assembly=FinanceApp.Data"
			 xmlns:viewmodel="clr-namespace:FinanceApp.MauiClient.ViewModel"
			 x:DataType="viewmodel:TransactionListViewModel"
             x:Class="FinanceApp.MauiClient.View.TransactionList"
             Title="{Binding Title}">

	<VerticalStackLayout>
		<Label>The List Page!</Label>
		<Button Text="Load Transactions" Command="{Binding LoadTransactionsCommand}"/>
		<CollectionView ItemsSource="{Binding Transactions}">
			<CollectionView.ItemTemplate>
				<DataTemplate x:DataType="model:Transaction">
					<Grid Padding="10">
						<Frame HeightRequest="125" Padding="0">
							<VerticalStackLayout Padding="10">
								<Label Text="{Binding Counterparty.Name}"/>
								<Label Text="{Binding Value}"/>
							</VerticalStackLayout>
						</Frame>
					</Grid>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>

</ContentPage>